#!/bin/bash
# Script for EPG grab from WebGrab+Plus  http://www.webgrabplus.com/documentation
set -x

samdec="$HOME/Snimke/grabber/samdecrypt/pharser"

function fixchannelnames_main()
{
# Nova TV
sed -e 's/"NOVA TV">/"NOVA">/g' guide-main.xml > guide-main-test.xml
sed -i 's/>NOVA TV</>NOVA</g' guide-main-test.xml
# HRT 1
sed -i 's/"HTV 1">/"HRT 1">/g' guide-main-test.xml
sed -i 's/>HTV 1</>HRT 1</g' guide-main-test.xml
# HRT 2
sed -i 's/"HTV 2">/"HRT 2">/g' guide-main-test.xml
sed -i 's/>HTV 2</>HRT 2</g' guide-main-test.xml
# HRT 3
sed -i 's/"HTV 3">/"HRT 3">/g' guide-main-test.xml
sed -i 's/>HTV 3</>HRT 3</g' guide-main-test.xml
# HRT 4
sed -i 's/"HTV 4">/"HRT 4">/g' guide-main-test.xml
sed -i 's/>HTV 4</>HRT 4</g' guide-main-test.xml
# RTL TELEVIZIJA
sed -i 's/"RTL TELEVIZIJA">/"RTL">/g' guide-main-test.xml
sed -i 's/>RTL TELEVIZIJA</>RTL</g' guide-main-test.xml
# Doma TV
sed -i 's/"Doma TV">/"Doma">/g' guide-main-test.xml
sed -i 's/>Doma TV</>Doma</g' guide-main-test.xml
# RTL TELEVIZIJA
sed -i 's/"DOMA TV">/"Doma">/g' guide-main-test.xml
sed -i 's/>DOMA TV</>Doma</g' guide-main-test.xml
# RTL 2
#sed -i 's/"RTL2">/"RTL2">/g' guide-main-test.xml
#sed -i 's/>RTL2</>RTL2</g' guide-main-test.xml
# RTL Plus
sed -i 's/"RTL PLUS">/"RTLli">/g' guide-main-test.xml
sed -i 's/>RTL PLUS</>RTLli</g' guide-main-test.xml
# CineStar TV
sed -i 's/"CINESTAR ACTION &amp; THRILLER">/"CineA">/g' guide-main-test.xml
sed -i 's/>CINESTAR ACTION &amp; THRILLER</>CineA</g' guide-main-test.xml
# CineStar Action&amp;Thriller
sed -i 's/"CINESTAR TV">/"Cines">/g' guide-main-test.xml
sed -i 's/>CINESTAR TV</>Cines</g' guide-main-test.xml
# TV 1000 Balkan
sed -i 's/"VIASAT TV1000">/"TV100">/g' guide-main-test.xml
sed -i 's/>VIASAT TV1000</>TV100</g' guide-main-test.xml
# Fox TV
sed -i 's/"FOX">/"Fox">/g' guide-main-test.xml
sed -i 's/>FOX</>Fox</g' guide-main-test.xml
# Fox Life
sed -i 's/"FOX LIFE">/"FoxLi">/g' guide-main-test.xml
sed -i 's/>FOX LIFE</>FoxLi</g' guide-main-test.xml
# Universal Channel
sed -i 's/"UNIVERSAL CHANNEL">/"Unive">/g' guide-main-test.xml
sed -i 's/>UNIVERSAL CHANNEL</>Unive</g' guide-main-test.xml
# Discovery Channel
sed -i 's/"DISCOVERY CHANNEL">/"Disco">/g' guide-main-test.xml
sed -i 's/>DISCOVERY CHANNEL</>Disco</g' guide-main-test.xml
# National Geographic Channel
sed -i 's/"NATIONAL GEOGRAPHIC">/"NatGe">/g' guide-main-test.xml
sed -i 's/>NATIONAL GEOGRAPHIC</>NatGe</g' guide-main-test.xml
# Viasat History
sed -i 's/"VIASAT HISTORY">/"Histo">/g' guide-main-test.xml
sed -i 's/>VIASAT HISTORY</>Histo</g' guide-main-test.xml
# Animal Planet
sed -i 's/"ANIMAL PLANET">/"Anima">/g' guide-main-test.xml
sed -i 's/>ANIMAL PLANET</>Anima</g' guide-main-test.xml
# Viasat Explore
sed -i 's/"VIASAT EXPLORER">/"Explo">/g' guide-main-test.xml
sed -i 's/>VIASAT EXPLORER</>Explo</g' guide-main-test.xml
# Travel Channel
#sed -i 's/"TLC">/"TLC">/g' guide-main-test.xml
#sed -i 's/>TLC</>TLC</g' guide-main-test.xml
# MrežaZG
sed -i 's/"MREŽAZG">/"Mreža">/g' guide-main-test.xml
sed -i 's/>MREŽAZG</>Mreža</g' guide-main-test.xml
# Jabuka TV
sed -i 's/"Jabuka TV">/"Jabuk">/g' guide-main-test.xml
sed -i 's/>Jabuka TV</>Jabuk</g' guide-main-test.xml
# Z1
sed -i 's/"Z1">/"Z 1">/g' guide-main-test.xml
sed -i 's/>Z1</>Z 1</g' guide-main-test.xml
# 24 SATA TV
sed -i 's/"24 SATA TV">/"24sat">/g' guide-main-test.xml
sed -i 's/>24 SATA TV</>24sat</g' guide-main-test.xml
# CNN International Europe
sed -i 's/"CNN">/"CNN">/g' guide-main-test.xml
sed -i 's/>CNN</>CNN</g' guide-main-test.xml
# Cartoon Network
sed -i 's/"CARTOON NETWORK">/"CN">/g' guide-main-test.xml
sed -i 's/>CARTOON NETWORK</>CN</g' guide-main-test.xml
# Nickelodeon
sed -i 's/"NICKELODEON">/"Nicke">/g' guide-main-test.xml
sed -i 's/>NICKELODEON</>Nicke</g' guide-main-test.xml
# DISNEY CHANNEL
sed -i 's/"DISNEY CHANNEL">/"Disne">/g' guide-main-test.xml
sed -i 's/>DISNEY CHANNEL</>Disne</g' guide-main-test.xml
# Mini TV
sed -i 's/"MINI TV">/"Mini">/g' guide-main-test.xml
sed -i 's/>MINI TV</>Mini</g' guide-main-test.xml
# RTL Kockica
sed -i 's/"RTL KOCKICA">/"RTLko">/g' guide-main-test.xml
sed -i 's/>RTL KOCKICA</>RTLko</g' guide-main-test.xml
# Sportska televizija
sed -i 's/"SPORTSKA TV">/"SPTV">/g' guide-main-test.xml
sed -i 's/>SPORTSKA TV</>SPTV</g' guide-main-test.xml
# Eurosport
sed -i 's/"EUROSPORT">/"Euro1">/g' guide-main-test.xml
sed -i 's/>EUROSPORT</>Euro1</g' guide-main-test.xml
# Eurosport 2
sed -i 's/"EUROSPORT 2">/"Euro2">/g' guide-main-test.xml
sed -i 's/>EUROSPORT 2</>Euro2</g' guide-main-test.xml
# SK 1
sed -i 's/"SK 1">/"SK1">/g' guide-main-test.xml
sed -i 's/>SK 1</>SK1</g' guide-main-test.xml
# SK 3
sed -i 's/"SK 3">/"SK3">/g' guide-main-test.xml
sed -i 's/>SK 3</>SK3</g' guide-main-test.xml
# MTV Hrvatska
sed -i 's/"MTV">/"MTV">/g' guide-main-test.xml
sed -i 's/>MTV</>MTV</g' guide-main-test.xml
# VH1 Europe
sed -i 's/"VH1">/"VH1">/g' guide-main-test.xml
sed -i 's/>VH1</>VH1</g' guide-main-test.xml
# CMC
sed -i 's/"CROATIAN MUSIC CHANNEL">/"C M C">/g' guide-main-test.xml
sed -i 's/>CROATIAN MUSIC CHANNEL</>C M C</g' guide-main-test.xml
# N1
sed -i 's/"N1">/"N 1">/g' guide-main-test.xml
sed -i 's/>N1</>N 1</g' guide-main-test.xml
######################################################
# FOX tv online test tv
sed -i 's/"Fox TV">/"FOX sr">/g' guide-main-test.xml
sed -i 's/>Fox TV</>FOX sr</g' guide-main-test.xml
# B92 tv online test tv
sed -i 's/"B92">/"B92 HD">/g' guide-main-test.xml
sed -i 's/>B92</>B92 HD</g' guide-main-test.xml
# FOX Life online test tv
sed -i 's/"Fox Life">/"FOX Life sr">/g' guide-main-test.xml
sed -i 's/>Fox Life</>FOX Life sr</g' guide-main-test.xml
# MTV online test tv
sed -i 's/"MTV Hrvatska">/"MTV Adria sr">/g' guide-main-test.xml
sed -i 's/>MTV Hrvatska</>MTV Adria sr</g' guide-main-test.xml
# Viasat Nature online test tv
sed -i 's/"Viasat Nature">/"VIASAT NATURE sr">/g' guide-main-test.xml
sed -i 's/>Viasat Nature</>VIASAT NATURE sr</g' guide-main-test.xml
# Pink online test tv
sed -i 's/"PINK">/"PINK sr">/g' guide-main-test.xml
sed -i 's/>PINK</>PINK sr</g' guide-main-test.xml
# Vh1 online test tv
sed -i 's/"VH-1">/"VH1 sr">/g' guide-main-test.xml
sed -i 's/>VH-1</>VH1 sr</g' guide-main-test.xml
# ESKA tv online test tv
sed -i 's/"Eska TV">/"Eska">/g' guide-main-test.xml
sed -i 's/>Eska TV</>Eska</g' guide-main-test.xml
# Correct hr language header
sed -i 's/lang="pl/lang="hr/g' guide-main-test.xml
 <<EOF
EOF
}
